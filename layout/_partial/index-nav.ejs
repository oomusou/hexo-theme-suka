<script>
  let titleFontSize;
  let bodyFontSize;
  let contentFontSize;

  let getFontSize = selector => {
    let element = document.querySelector(selector);

    if (element !== null) {
      let oriFontSize = window.getComputedStyle(element).fontSize;
      let incFontSize = parseInt(oriFontSize) * 1.2 + 'px';

      return [
        oriFontSize,
        incFontSize
      ];
    }

    return [0, 0];
  };

  let toggleFontSize = selector => fontSizes => {
    let element = document.querySelector(selector);
    if (element !== null) {
      let fontSize = window.getComputedStyle(element).fontSize;

      if (fontSize === fontSizes[0]) {
        document.querySelectorAll(selector).forEach(
          x => x.style['font-size'] = fontSizes[1]
        );
      } else {
        document.querySelectorAll(selector).forEach(
          x => x.style['font-size'] = fontSizes[0]
        );
      }
    }
  };

  let increaseFontSize = () => {
    toggleFontSize('.post-entry a.card-title')(titleFontSize);
    toggleFontSize('.post-entry .card-body')(bodyFontSize);
    toggleFontSize('#post-content')(contentFontSize);
  };

  window.onload = function () {
    titleFontSize = getFontSize('.post-entry a.card-title');
    bodyFontSize = getFontSize('.post-entry .card-body');
    contentFontSize = getFontSize('#post-content');
  };
</script>

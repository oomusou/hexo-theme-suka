<script>
  var oriTitleFontSize;
  var incTitleFontSize;
  var oriBodyFontSize;
  var incBodyFontSize;
  var oriConentFontSize;
  var incContentFontSize;

  function getFontSize(pred, selector) {
    var element = pred.call(document, selector);

    if (element != undefined) {
      oriFontSize = window.getComputedStyle(element).fontSize;
      incFontSize = parseInt(oriFontSize) * 1.2 + 'px';

      return [
        oriFontSize,
        incFontSize
      ];
    }

    return [0, 0];
  }

  window.onload = function () {
    var result = [];

    result = getFontSize(document.querySelector, '.post-entry a.card-title');
    oriTitleFontSize = result[0];
    incTitleFontSize = result[1];

    result = getFontSize(document.querySelector, '.post-entry .card-body');
    oriBodyFontSize = result[0];
    incBodyFontSize = result[1];

    result = getFontSize(document.getElementById, 'post-content');
    oriConentFontSize = result[0];
    incContentFontSize = result[1];
  };

  function increaseFontSize() {
    var title = document.querySelector('.post-entry a.card-title');
    if (title != undefined) {
      var titleFontSize = window.getComputedStyle(title).fontSize;

      if (titleFontSize === oriTitleFontSize) {
        document.querySelectorAll('.post-entry a.card-title').forEach(
          x => x.style['font-size'] = incTitleFontSize
        );
      }
      else {
        document.querySelectorAll('.post-entry a.card-title').forEach(
          x => x.style['font-size'] = oriTitleFontSize
        );
      }
    }

    var body = document.querySelector('.post-entry .card-body');
    if (body != undefined) {
      var bodyFontSize = window.getComputedStyle(body).fontSize;

      if (bodyFontSize === oriBodyFontSize) {
        document.querySelectorAll('.post-entry .card-body').forEach(
          x => x.style['font-size'] = incBodyFontSize
        );
      }
      else {
        document.querySelectorAll('.post-entry .card-body').forEach(
          x => x.style['font-size'] = oriBodyFontSize
        );
      }
    }

    var content = document.getElementById('post-content');
    if (content != undefined) {
      var contentFontSize = window.getComputedStyle(content).fontSize;

      if (contentFontSize === oriConentFontSize) {
        content.style.fontSize = incContentFontSize;
      }
      else {
        content.style.fontSize = oriConentFontSize;
      }
    }
  }
</script>

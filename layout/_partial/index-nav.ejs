<script>
  let oriTitleFontSize;
  let incTitleFontSize;
  let oriBodyFontSize;
  let incBodyFontSize;
  let oriContentFontSize;
  let incContentFontSize;

  function getFontSize(selector) {
    let element = document.querySelector(selector);

    if (element !== null) {
      let oriFontSize = window.getComputedStyle(element).fontSize;
      let incFontSize = parseInt(oriFontSize) * 1.2 + 'px';

      return [
        oriFontSize,
        incFontSize
      ];
    }

    return [0, 0];
  }

  window.onload = function () {
    let result;

    result = getFontSize('.post-entry a.card-title');
    oriTitleFontSize = result[0];
    incTitleFontSize = result[1];

    result = getFontSize('.post-entry .card-body');
    oriBodyFontSize = result[0];
    incBodyFontSize = result[1];

    result = getFontSize('#post-content');
    oriContentFontSize = result[0];
    incContentFontSize = result[1];
  };

  function increaseFontSize() {
    let title = document.querySelector('.post-entry a.card-title');
    if (title !== null) {
      let titleFontSize = window.getComputedStyle(title).fontSize;

      if (titleFontSize === oriTitleFontSize) {
        document.querySelectorAll('.post-entry a.card-title').forEach(
          x => x.style['font-size'] = incTitleFontSize
        );
      } else {
        document.querySelectorAll('.post-entry a.card-title').forEach(
          x => x.style['font-size'] = oriTitleFontSize
        );
      }
    }

    let body = document.querySelector('.post-entry .card-body');
    if (body !== null) {
      let bodyFontSize = window.getComputedStyle(body).fontSize;

      if (bodyFontSize === oriBodyFontSize) {
        document.querySelectorAll('.post-entry .card-body').forEach(
          x => x.style['font-size'] = incBodyFontSize
        );
      } else {
        document.querySelectorAll('.post-entry .card-body').forEach(
          x => x.style['font-size'] = oriBodyFontSize
        );
      }
    }

    let content = document.getElementById('post-content');
    if (content !== null) {
      let contentFontSize = window.getComputedStyle(content).fontSize;

      if (contentFontSize === oriContentFontSize) {
        content.style.fontSize = incContentFontSize;
      } else {
        content.style.fontSize = oriContentFontSize;
      }
    }
  }
</script>
